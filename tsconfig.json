    "module": "ES2020",
    "strict": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./tests"
  ]
}